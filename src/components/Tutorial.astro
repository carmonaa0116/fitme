    }
</style>

<script>
    const track = document.getElementById("carouselTrack");
    const steps = document.querySelectorAll(".carousel-step");
    const prevButton = document.getElementById("prevButton");
    const nextButton = document.getElementById("nextButton");
    let currentStep = 0;
    let autoNext = setInterval(autoMoveToNextStep, 5000); // 5 segundos de intervalo

    function updateCarousel() {
        const stepWidth = (steps[0] as HTMLElement).offsetWidth;
        if (track) {
            track.style.transform = `translateX(-${currentStep * stepWidth}px)`;
        }
    }

    function autoMoveToNextStep() {
        if (currentStep < steps.length - 1) {
            currentStep++;
        } else {
            currentStep = 0; // Vuelve al primer paso al final
        }
        updateCarousel();
    }

    if (prevButton) {
        prevButton.addEventListener("click", () => {
            if (currentStep > 0) {
                currentStep--;
            } else {
                currentStep = steps.length - 1; // Vuelve al √∫ltimo paso
            }
            updateCarousel();
            resetAutoMove(); // Reinicia el temporizador
        });
    }

    if (nextButton) {
        nextButton.addEventListener("click", () => {
            if (currentStep < steps.length - 1) {
                currentStep++;
            } else {
                currentStep = 0; // Vuelve al primer paso al final
            }
            updateCarousel();
            resetAutoMove(); // Reinicia el temporizador
        });
    }

    window.addEventListener("resize", updateCarousel);

    function resetAutoMove() {
        clearInterval(autoNext); // Detiene el temporizador
        autoNext = setInterval(autoMoveToNextStep, 5000); // Reinicia el temporizador
    }
</script>

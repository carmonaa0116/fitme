<style>
    @import "/src/assets/font/font.css";
    @import "../styles/global.css";

    #hero {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
        transition: background 0.3s ease;
    }

    #hero-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        padding: 3rem;
        border-radius: 20px;
        background: rgba(
            255,
            255,
            255,
            0.1
        ); /* M√°s transparente para efecto vidrio */
        backdrop-filter: blur(12px) saturate(180%);
        -webkit-backdrop-filter: blur(12px) saturate(180%);
        border: 1px solid rgba(255, 255, 255, 0.2); /* Borde tenue como cristal */
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
        color: var(--white);
        transition: transform 0.3s ease;
    }

    #hero-content h1 {
        font-family: "Poppins", sans-serif;
        font-size: 2.5rem;
        font-weight: 700;
    }

    #hero-content p {
        font-family: "Poppins", sans-serif;
        font-size: 1.2rem;
    }

    #button-generator {
        background-color: var(--black);
        color: var(--white);
        display: flex;
        align-items: center;
        gap: 0.8rem;
        padding: 0.8rem 1.5rem;
        border-radius: 999px;
        font-family: "Poppins", sans-serif;
        font-size: 1rem;
        cursor: pointer;
        transition:
            background-color 0.3s ease,
            transform 0.3s ease;
    }

    #button-generator:hover {
        background-color: #333;
        transform: scale(1.05);
    }

    #button-generator svg {
        transition: transform 0.3s ease;
    }

    #button-generator:hover svg {
        transform: rotate(180deg);
    }

    @media (max-width: 768px) {
        #hero-content {
            padding: 1.5rem;
        }

        #hero-content h1 {
            font-size: 1.8rem;
        }

        #hero-content p {
            font-size: 1rem;
        }

        #button-generator {
            font-size: 0.9rem;
            padding: 0.6rem 1.2rem;
        }
    }

    @media (max-width: 480px) {
        #hero-content {
            padding: 1rem;
        }

        #hero-content h1 {
            font-size: 1.5rem;
        }

        #hero-content p {
            font-size: 0.9rem;
        }

        #button-generator {
            font-size: 0.8rem;
            padding: 0.5rem 1rem;
        }
    }
</style>

<script>
    const divBienvenida = document.querySelector(".bienvenida");
    const buttonGoToGenerator = document.getElementById("button-generator");

    if (buttonGoToGenerator) {
        buttonGoToGenerator.addEventListener("click", () => {
            window.location.href = "/Rutinas";
        });
    }

    document.addEventListener("DOMContentLoaded", () => {
        const datosUsr = sessionStorage.getItem("usuario");
        if (divBienvenida && datosUsr) {
            const parsedUsr = JSON.parse(datosUsr);
            const firstName = parsedUsr.nombre?.split(" ")[0] || "Usuario";
            divBienvenida.innerHTML = `<h1 style="text-align: center; line-height: 1;">¬°Bienvenido/a ${firstName} üí™!</h1>`;
        } else {
            if (divBienvenida) {
                divBienvenida.innerHTML = `<h1 style="text-align: center; line-height: 1;">¬°Bienvenido/a, Usuario!</h1>`;
            }
        }
    });
</script>

---
import NoSessionLayout from "../layouts/NoSessionLayout.astro";
---

<NoSessionLayout>
    <dialog id="login-error-dialog">
        <p id="login-error-message">Ha ocurrido un error al iniciar sesión.</p>
        <button id="close-error-dialog">Cerrar</button>
    </dialog>
    <main id="main-login">
        <div id="div-login">
            <form id="form-login">
                <h2>Iniciar sesión</h2>

                <div class="form-group">
                    <label for="nombre_usuario">Nombre de usuario:</label>
                    <input
                        type="text"
                        id="nombre_usuario"
                        name="nombre_usuario"
                        required
                    />
                </div>

                <div class="form-group">
                    <label for="contrasena">Contraseña:</label>
                    <input
                        type="password"
                        id="contrasena"
                        name="contrasena"
                        required
                    />
                </div>

                <button type="submit">Iniciar sesión</button>
            </form>
            <div id="div-registrarse">
                <p>
                    ¿No tienes cuenta? <a href="/Registro">Registrarse</a>
                </p>
            </div>
        </div>
    </main>

    <style>
        @import url("../assets/font/font.css");
        @imnport url("../styles/global.css");

        #main-login {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 1rem;
        }

        #form-login {
            display: flex;
            flex-direction: column;
            color: var(--white);
            border: 1px solid var(--red);
            border-radius: 10px;
            padding: 2rem;
            width: 100vw;
            max-width: 400px;
            gap: 1rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        input {
            padding: 0.5rem;
            border: 1px solid var(--red);
            border-radius: 5px;
            background-color: var(--black);
            color: var(--white);
        }

        button {
            padding: 0.75rem;
            background-color: var(--red);
            color: var(--white);
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: var(--secundary-red);
        }

        #div-registrarse {
            text-align: center;
            margin-top: 1rem;
            color: var(--white);
        }

        a {
            text-decoration: none;
            color: var(--red);
            font-weight: 500;
            transition: color 0.3s ease;
        }

        a:hover {
            color: var(--secundary-red);
        }

        @media (min-width: 768px) {
            #form-login {
                max-width: 100vw;
            }
        }

        @media (min-width: 1024px) {
            #form-login {
                max-width: 600px;
            }
        }
    </style>

    <script type="module" src="/src/js/login.js"></script>
</NoSessionLayout>

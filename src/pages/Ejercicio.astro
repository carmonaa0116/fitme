---
export interface Ejercicio {
  id: string;
  nombre: string;
  imagen: string;
  video: string;
  musculos: string[];
}

export interface Props {
  ejercicios: Ejercicio[];
}

const { ejercicios } = Astro.props;
---



<div class="container">
  {ejercicios.map((ejercicio) => (
    <div class="card">
      <img src={ejercicio.imagen} alt={`Imagen de ${ejercicio.nombre}`} />
      <h3>{ejercicio.nombre}</h3>
      <p class="musculos">MÃºsculos trabajados: {ejercicio.musculos.join(", ")}</p>
      <a class="video-link" href={ejercicio.video} target="_blank">Ver Video</a>
    </div>
  ))}
</div>
<style>
    .container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 16px;
      padding: 20px;
    }
    
    .card {
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 15px;
      box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
      background: #fff;
      text-align: center;
    }
    
    .card img {
      max-width: 100%;
      height: auto;
      border-radius: 8px;
    }
  
    .card h3 {
      font-size: 1.2em;
      margin: 10px 0;
    }
  
    .musculos {
      font-size: 0.9em;
      color: #555;
    }
  
    .video-link {
      display: block;
      margin-top: 10px;
      color: #0077cc;
      text-decoration: none;
      font-weight: bold;
    }
  </style>
---
import Layout from "../layouts/Layout.astro";
import NavBar from "../components/NavBar.astro";
---

<Layout>
  <main>
    <section id="profile">
      <div class="profile-header">
        <h1>Bienvenido, Alejandro</h1>
        <p>Tu perfil de usuario</p>
      </div>

      <div class="profile-content">
        <div class="profile-image">
          <img src="../assets/profile-picture.jpg" alt="Imagen de perfil" id="profile-img" />
        </div>
        <div class="profile-details">
          <h2>Detalles del perfil</h2>
          <p><strong>Nombre:</strong> Alejandro</p>
          <p><strong>Email:</strong> alejandro@correo.com</p>
          <p><strong>Fecha de nacimiento:</strong> 22/05/2002</p>
          <p><strong>Ubicación:</strong> Ciudad Real</p>
          <button id="editProfileBtn">Editar Perfil</button>
        </div>
      </div>
    </section>
  </main>
    <script type="module" src="../src/js/perfil.js"></script>

  <style>
    @import url(../assets/font/font.css);

    :root{
        --black: #090707;
        --red: #DB4C44;
        --secundary-red: #FF5A5F;
        --white: #FFFFFF;
        --gray: #e5e5e50f;
    }

    * {
        font-family: 'Poppins', sans-serif;
    }

    body, html {
        padding: 0;
        margin: 0 auto;
        max-width: 100vw;
        height: auto;
        box-sizing: border-box;
        display: flex;
        align-items: center;
        flex-direction: column;
        color: var(--white);
        font-size: 1.2rem;
        font-weight: 400;
        line-height: 1.5rem;
    }

    h1 {
        font-weight: 500;
    }

    h2 {
        font-weight: 500;
    }

    main {
        max-width: 100vw;
        width: 90vw;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        margin-bottom: 10vh;
    }

    #profile {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        width: 100%;
        border-radius: 8px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
    }

    .profile-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .profile-content {
        display: flex;
        justify-content: space-between;
        width: 80%;
        max-width: 1000px;
        padding: 2rem;
        border-radius: 8px;
        background-color: rgba(0, 0, 0, 0.6);
    }

    .profile-image img {
        width: 150px;
        height: 150px;
        border-radius: 50%;
    }

    .profile-details {
        max-width: 60%;
    }

    .profile-details p {
        font-size: 1rem;
        margin: 10px 0;
    }

    #editProfileBtn {
        background-color: var(--red);
        color: var(--white);
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    #editProfileBtn:hover {
        background-color: var(--secundary-red);
    }

    /* Estilos para inputs */
    input[type="text"], input[type="email"], input[type="password"] {
        background-color: transparent;
        color: var(--white);
        border: none;
        border-bottom: 1px solid var(--gray);
        padding: 8px 12px;
        margin: 8px 0;
        width: 100%;
        box-sizing: border-box;
        transition: border-color 0.3s ease, font-size 0.3s ease;
    }

    input[type="text"]:focus, input[type="email"]:focus, input[type="password"]:focus {
        outline: none;
        border-bottom: 1px solid var(--red);
        font-size: 105%;
    }

    /* Estilo del botón de editar perfil */
    button {
        cursor: pointer;
        border: none;
    }
  </style>
</Layout>

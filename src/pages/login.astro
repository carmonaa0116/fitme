---
import NoSessionLayout from "../layouts/NoSessionLayout.astro";
import Footer from "../components/Footer.astro";
---

<NoSessionLayout>
    <main id="main-login">
        <div id="div-login">
            <form id="form-login">
                <h2 style="text-align: center; color: var(--white);">Iniciar sesión</h2>

                <div>
                    <label for="nombre_usuario" style="color: var(--white);">Nombre de usuario:</label>
                    <input
                        type="text"
                        id="nombre_usuario"
                        name="nombre_usuario"
                        required
                        style="background-color: var(--black); color: var(--white);"
                    />
                </div>

                <div>
                    <label for="contrasena" style="color: var(--white);">Contraseña:</label>
                    <input
                        type="password"
                        id="contrasena"
                        name="contrasena"
                        required
                        style="background-color: var(--black); color: var(--white);"
                    />
                </div>

                <button type="submit" style="background-color: var(--black); color: var(--white);">Iniciar sesión</button>
            </form>
        </div>
    </main>
</NoSessionLayout>

<style>
    #main-login {
        background-color: var(--black);
    }

    #form-login {
        color: var(--white);
        display: flex;
        flex-direction: column;
        background-color: var(--black);
        border: 1px solid var(--red);
        border-radius: 10px;
        padding: 5vw;
        margin-top: 5vh;
        width: 95%;
        max-width: 800px;
        gap: 1vw;
        transition: 0.3s;
        border: 1px solid var(--red);
        border-radius: 10px;
    }

    @media (min-width: 768px) {
        #form-login {
            margin-top: 10vh;
            width: 80%;
            max-width: 1000px;
        }
    }

    @media (min-width: 1024px) {
        #form-login {
            margin-top: 15vh;
            width: 60%;
            max-width: 1200px;
        }
    }
</style>

<script type="module" src="/src/js/login.js"></script>


